<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".MainActivityFragment">

    <ImageView
        android:src="@drawable/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:adjustViewBounds="true"/>
    <ImageView
        android:src="@color/red"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:scaleType="fitXY"
        android:adjustViewBounds="true"/>
    <TextView
        android:text="@string/bienvenida"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:gravity="center"
        android:textSize="30dp"
        android:textColor="@color/red"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/btn_ingreso"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="Ingreso"
            android:textColor="@color/white"
            android:background="@color/red"
            android:layout_weight="1"
            android:layout_margin="1dp"/>
        <Button
            android:id="@+id/btn_promocion"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="Promoción"
            android:textColor="@color/white"
            android:background="@color/red"
            android:layout_weight="1"
            android:layout_margin="1dp"/>
        <Button
            android:id="@+id/btn_promocion_funcion"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="Promoción en la función"
            android:textColor="@color/white"
            android:background="@color/red"
            android:layout_weight="2"
            android:layout_margin="1dp"/>
            />
    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <ImageView
        android:id="@+id/video_intro"
        android:src="@drawable/video"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:adjustViewBounds="true"
        android:layout_margin="15dp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bienvenida"
        android:layout_marginLeft="15dp"
        android:textSize="@dimen/abc_text_size_title_material"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/texto_bienvenida"
        android:layout_margin="15dp"
        />
    </LinearLayout>
</ScrollView>

</LinearLayout>
